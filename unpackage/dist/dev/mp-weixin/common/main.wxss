:root {
	--tabbar-text:#B4B4C3;
	--tabbar-text-active:#3FCC86;
}

/* 底部导航栏样式 */
.tabbar{
	width:100vw;
	height:100rpx;
	background:rgba(255,255,255,1);
	-webkit-box-shadow:0px -1px 0px 0px rgba(0, 0, 0, 0.1);
	        box-shadow:0px -1px 0px 0px rgba(0, 0, 0, 0.1);
	position: fixed;
	bottom: 0;
	bottom: constant(safe-area-inset-bottom);
	bottom: env(safe-area-inset-bottom);
	/* padding-bottom: 0;  
	padding-bottom: constant(safe-area-inset-bottom);  
	padding-bottom: env(safe-area-inset-bottom);  */
}
.tabbar-lists{
	width: 100%;
	height: 100%;
}
.tabbar-lists>.tabbar-item>text{
	margin-top: 10rpx;
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(179,179,195,1);
}
.tabbar-lists>.tabbar-item>.active{
	color: #3FCB85;
}
.flex{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.flex-column{	/*垂直居中
 */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.tabbar-item{
	width: 33%;
	height: 100%;
}
.tabbar-item>image{
	width: 36rpx;
	height: 40rpx;
}
.tabbar .tabbar-item text{
	color: $uni-color-primary;
}

/* 底部导航栏样式结束 */

/* 安全区域的内容宽高 */
.safearea{
	width: 100vw;
	background: #EBEFF1;
}
.ipx{
	height: calc(100vh - 100rpx - 30rpx);
}

/* 文字样式 */
.t-text{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(35,35,35,1);
}

/* 显示一行，多余的... */
.hidden_1{
	display:-webkit-box;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
	overflow:hidden;
}

/* 显示二行，多余的... */
.hidden_2{
	
	display:-webkit-box;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
	overflow:hidden;
}

/* 显示三行，多余的... */
.hidden_3{
	
	display:-webkit-box;
	-webkit-line-clamp:3;
	-webkit-box-orient:vertical;
	overflow:hidden;
}

/* 线条 */
.t-line{
	width: 100%;
	height: 2rpx;
	background:rgba(228,228,228,0.3);
}	
	
	

